<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/main_background_green</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/main_background_green</item>
    </style>

    <style name="Blue" parent="AppTheme" >
        <item name="colorPrimary">@color/cpb_blue</item>
        <item name="colorPrimaryDark">@color/cpb_blue_dark</item>
        <item name="colorAccent">@color/cpb_blue</item>
        <item name="android:colorBackground">@color/main_background_blue</item>
    </style>

    <style name="Blue.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/cpb_blue</item>
        <item name="colorPrimaryDark">@color/cpb_blue_dark</item>
        <item name="colorAccent">@color/cpb_blue</item>
        <item name="android:colorBackground">@color/main_background_blue</item>
    </style>

</resources>
